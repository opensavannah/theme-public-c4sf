extends ../layout

block content
  .row.breadcrumbs
    .col-sm-12
      a(href='/')= brigade.name
      | &nbsp;&nbsp;/&nbsp;
      a(href='/contact') Contact
  .row.page-header
    .col-sm-12
      h1.page-title Contact
  if user && user.isAdmin()
    a.btn.btn-secondary(href='/admin/contact/edit') Manage Contact page
  .row
    .col-sm-9
      .row
      each user in users
        .col-sm-6.contacts
          .row
            .col-sm-3
                img(src=user.profile.picture, width='80')
            .col-sm-9
              if user.profile.name
                h3=user.profile.name
              else
                h3 name placeholder
              if user.profile.position
                p=user.profile.position
              else
                p=brigade.name
                  | &nbsp;Member
              if (user.profile.showcontact && user.email)
                p
                  a(href='mailto: '+user.email) email
  hr
  .row
